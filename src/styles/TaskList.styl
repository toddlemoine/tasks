.taskList

    ul
        padding: 0
    li
        display: flex

    .task
        padding: .5em

        .reorder, input[type=checkbox]
            margin: auto 5px
            flex: 0 0 auto

        .reorder
            cursor: move

        input[type=text]
            flex: 1 1 auto
            padding: 0.5em

    .done
        color: #666
        text-decoration: line-through

        label
            flex: 1 1 auto
            padding: .5em

    .allDone
        text-align: center
        font-size: 1.5rem
        padding: 5em


    .actionGroup
        flex 0 1 auto
        border-bottom: 1px dotted rgba(0,0,0,0.15)
        padding: 2px

        button
            height: 35px
            img
                margin-right: 5px
            &:hover
                background: white

            &[disabled]:hover
                background: none